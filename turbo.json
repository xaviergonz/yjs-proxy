{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build-docs": {
      "dependsOn": ["build"],
      "outputs": ["api-docs/**"],
      "inputs": ["src/**", "typedocconfig.js"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:ci": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    }
  }
}
